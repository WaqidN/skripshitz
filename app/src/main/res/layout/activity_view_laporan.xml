<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abnormal.crimereport.activity.ViewLaporan">

    <include android:id="@+id/toolbarView"
        layout="@layout/layout_toolbar"/>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_below="@+id/toolbarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="25dp"
                android:text="Detail Lapaoran "
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/view1"
                style="@style/custom_forms"
                android:layout_below="@+id/view"
                android:drawableRight="@mipmap/ic_visible" />

            <TextView
                android:id="@+id/view2"
                style="@style/custom_forms"
                android:layout_below="@+id/view1"
                android:drawableRight="@mipmap/ic_visible" />

            <TextView
                android:id="@+id/view3"
                style="@style/custom_forms"
                android:layout_below="@+id/view2"
                android:drawableRight="@mipmap/ic_visible" />

            <TextView
                android:id="@+id/view4"
                style="@style/custom_forms"
                android:layout_below="@+id/view3"
                android:drawableRight="@mipmap/ic_visible" />

            <TextView
                android:id="@+id/view5"
                style="@style/custom_forms"
                android:layout_below="@+id/view4" />

            <TextView
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/view5"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_dialog"
                android:paddingLeft="15dp"
                android:paddingRight="10dp" />

            <Button
                android:id="@+id/Edit"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/view6"
                android:layout_alignRight="@+id/view6"
                android:layout_below="@+id/view6"
                android:text="Edit"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
