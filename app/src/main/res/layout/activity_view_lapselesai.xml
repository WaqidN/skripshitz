<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abnormal.crimereport.activity.admin.ViewLaporan">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_below="@+id/toolbarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/view0"
                style="@style/custom_forms"
                android:layout_below="@+id/view" />

            <TextView
                android:id="@+id/view1"
                style="@style/custom_forms"
                android:layout_below="@+id/view0" />

            <TextView
                android:id="@+id/view2"
                style="@style/custom_forms"
                android:layout_below="@+id/view1" />

            <TextView
                android:id="@+id/view3"
                style="@style/custom_forms"
                android:layout_below="@+id/view2" />

            <TextView
                android:id="@+id/view5"
                style="@style/custom_forms"
                android:layout_below="@+id/view3" />

            <TextView
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/view5"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_dialog"
                android:paddingLeft="15dp"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/tmpilG"
                android:layout_below="@+id/view6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_add"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/liats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/tmpilG"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
