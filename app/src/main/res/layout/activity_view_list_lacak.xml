<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abnormal.crimereport.activity.admin.ViewLaporan">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/titleWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/web"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/hostWeb"
                android:layout_below="@+id/titleWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:textSize="15dp"
                android:background="@drawable/custom_dialog"
                android:drawableRight="@mipmap/ic_visible"/>

            <TextView
                android:id="@+id/linkWeb"
                android:layout_below="@+id/hostWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:textSize="15dp"
                android:background="@drawable/custom_dialog"/>

            <Button
                android:id="@+id/saveaLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linkWeb"
                android:layout_alignRight="@+id/linkWeb"
                android:layout_below="@+id/linkWeb"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="14dp"
                android:text="Save"
                android:background="@color/btn_login_bg"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
