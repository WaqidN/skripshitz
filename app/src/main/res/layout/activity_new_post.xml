<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    tools:context="com.example.abnormal.crimereport.activity.admin.PostActivity">

    <EditText
        android:id="@+id/isiJudul"
        style="@style/custom_forms"
        android:hint="Judul"
        android:inputType="text"/>

    <EditText
        android:id="@+id/isiDesk"
        style="@style/custom_forms"
        android:layout_height="100dp"
        android:hint="Deskripsi"
        android:inputType="text"
        android:layout_below="@+id/isiJudul"/>

    <TextView
        android:id="@+id/text_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/isiDesk"
        android:text="Kategori"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_kategori"
        android:layout_marginLeft="30dp">

        <RadioButton
            android:id="@+id/berita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Berita"/>
        <RadioButton
            android:id="@+id/Tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips"/>
        <RadioButton
            android:id="@+id/uncategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uncategories"/>
    </RadioGroup>

    <TextView
        android:id="@+id/text_addfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add File"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_above="@+id/kategori"
        android:layout_alignLeft="@+id/simpanP"
        android:layout_alignStart="@+id/simpanP"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <ImageButton
        android:id="@+id/addfile_Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/text_addfile"
        android:layout_alignRight="@+id/text_addfile"
        android:layout_alignEnd="@+id/text_addfile" />

    <TextView
        android:id="@+id/batalP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batal"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/kategori"
        android:layout_alignRight="@+id/kategori"
        android:layout_alignEnd="@+id/kategori"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/simpanP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/bg_main"
        android:layout_alignBaseline="@+id/batalP"
        android:layout_alignBottom="@+id/batalP"
        android:layout_toRightOf="@+id/batalP"
        android:layout_toEndOf="@+id/batalP"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

</RelativeLayout>
